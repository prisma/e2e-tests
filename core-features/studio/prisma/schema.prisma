datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id    Int    @id
    name  String
    email String

    parentId Int
    parent   User   @relation(fields: [parentId], references: [id])
    children User[] @relation("UserToUser")
}
