{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": false
  },
  "include": ["src/index.ts"],
  "exclude": ["./dist", "./build", "./node_modules"]
}
