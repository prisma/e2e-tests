    "firebase-admin": "9.0.0",
    "firebase-functions": "3.8.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.4.0-dev.7",
    "firebase-functions-test": "0.2.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  }
}
