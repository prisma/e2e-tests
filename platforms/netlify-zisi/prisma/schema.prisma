// Like, postgresql://user:password@localhost:5432/database/schema
datasource db {
  provider = "postgresql"
  url      = env("NETLIFY_ZISI_PG_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model User {
  id    String  @default(cuid()) @id
  email String  @unique
  name  String?
}
