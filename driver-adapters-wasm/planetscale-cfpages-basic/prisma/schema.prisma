generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType      = "wasm"
}

datasource db {
  provider = "mysql"
  // TODO this url should not contain the db name
  url      = "mysql://foo:bar@baz/eco-driver-adapters-wasm-planetsacle-cfpages-basic?sslaccept=strict"
  // directUrl = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  age   Int?
}
